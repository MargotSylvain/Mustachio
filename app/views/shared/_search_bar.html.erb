<div class="container">
  <div class="row ">
    <div class="col-xs-12 col-md-4 col-md-offset-3 text-center">
      <%= simple_form_for :movie, method: :get, url: search_path do |f|%>
      <div class='searchbar-mustachio'>
        <%= f.input_field :title, as: :string, placeholder: 'input title', class:'searchbar-mustachio-input'  %>
        <%= f.input_field :year, as: :integer, placeholder: 'input year' , class:'searchbar-mustachio-input'%>
        <%= image_submit_tag("logo.png", class: 'image-responsive search-logo') %>
      </div>
      <% end %>
    </div>
  </div>
</div>




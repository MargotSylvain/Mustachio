<!DOCTYPE html>
<html>
<head>
  <title>Mustachio</title>
  <%= csrf_meta_tags %>
  <!-- Add these line for detecting device width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


</head>

<body>

  <div id="wrapper">

    <div id="">
      <% unless (controller_name == "pages" && action_name == 'home') || (controller_name == "sessions") || (controller_name == "registrations")%>
      <%= render 'shared/navbar' %>
    </div><!-- #header -->

    <div id="content">
      <div class="nav-offset" style='margin-top:80px;'>
        <% unless controller_name == "pages" && (action_name == 'home' || action_name == 'about' || action_name == 'friends') || controller_name == "tags" || controller_name == "friendships" || controller_name == "users"%>
        <%= render 'shared/search_bar'  %></div>
        <% end %>
        <% end %>
        <%= render 'shared/flashes' %>


        <%= yield %>


      </div>
    </div><!-- #content -->

    <div id="footer">
        <% unless controller_name == "pages" && action_name == 'home' || (controller_name == "sessions") || (controller_name == "registrations") %>
        <%= render 'shared/footer' %>
        <% end %>
    </div><!-- #footer -->

  </div><!-- #wrapper -->
</body>
</html>

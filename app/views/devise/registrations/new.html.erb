<div class="row">
  <div class="col-xs-12 col-sm-6">
    <h3>Mustachio is a social media, based on media</h3>
    <h4>Enjoy your me time</h4>
    <h5>Collection</h5>
    <p>Create your collection of movies</p>
    <p>Customize your collection with lists, tags, ratings and movie review</p>
  </div>
  <div class="col-xs-12 col-sm-6">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, required: false, autofocus: true %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>


</div>



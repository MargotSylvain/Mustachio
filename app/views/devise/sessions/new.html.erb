<div id="sign-in">

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 text-center sign-in-title">
      <h2>Welcome back!</h2>
    </div>

    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username, required: false, autofocus: true %>
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions text-center">
          <%= image_submit_tag("logo-white.png", class: 'image-responsive avatar-large sign-in-logo') %>
        </div>
      <% end %>
    </div>
  </div>

</div>



<!-- <style type="text/css"> *{ border: 1px solid red !important;} </style> -->

<div class="banner-results position-rel" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.6) 50%), url(<%= @movie.backdrop_url %>);">
  <div class="results-wrapper">

    <div class="results-container">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <h1><%= @movie.title %></h1>
            <h3><%= @movie.year %></h3>
          </div><!--end of xs-12-->
        </div><!-- of row-->
      </div><!--end of container-->
    </div><!--end results contianer-->

    <div class="results-container results-bottom">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <%= image_tag @movie.photo_url, class: "banner-poster" %>
          </div>


          <div class="col-xs-12 col-sm-8 results-content-bg"><!--creates nested boot-->

          <div class="row">
            <div class="col-sm-3 col-xs-12 center">
               <strong>Plot:</strong>
            </div>
            <div class="col-sm-9 col-xs-12">
              <%= @movie.synopsis %>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-3 col-xs-12 center">
               <strong>Directors:</strong>
            </div>
            <div class="col-sm-9 col-xs-12">
               <%= @movie.director%>
            </div>
          </div>



          <div class="row">
            <div class="col-sm-3 col-xs-12 center">
               <strong>Actors:</strong>
            </div>
            <div class="col-sm-9 col-xs-12">
              <%= @movie.actor %>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-3 col-xs-12 center">
               <strong>Genre: </strong>
            </div>
            <div class="col-sm-9 col-xs-12">
              <%= @movie.genre %>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-3 col-xs-12 center">
               <strong>Rated: </strong>
            </div>
            <div class="col-sm-9 col-xs-12">
              <%= @movie.rated %>
            </div>
          </div>

            <%= simple_form_for @collection do |f|%>
            <%= f.hidden_field :movie_id, :value => @movie.id %>
            <%= button_to "add to collection", collections_path, class: "btn btn-primary add-to-col", method: :post %>
            <% end  %>

          </div><!--end of col-sm-8-->

        </div><!--end of second row-->
      </div><!--end of container-->
    </div><!--end results container-->

  </div><!--end of results-wrapper-->
</div><!-- end of img background-->


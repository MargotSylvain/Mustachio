<h4>Current user:</h4> <%=current_user.username%>
<h4>User list</h4>
<div id="users">
  <%@users.each do |user| %>
  <%unless user == current_user%>
  <div class="user">
    <p>
      <strong><%=user.username %></strong>
      <%=link_to "Add Friend", friendships_path(friend_id: user, user_id: current_user), method: :post %>
      <div class="clear"></div>
    </p>
  </div>
  <% end %>
  <% end %>
</div>

<h4>My friends</h4>
<ul>
  <% current_user.friends.each do |friend|%>
      <li>
        <%=friend.username%>
      </li>

  <%end%>

  <%# current_user.friendships.each do |friendship| %>
    <%#= p friendship %>
    <%#= friendship.user_id %>
    <%#= friendship.friend_id %>
    <%#= link_to "Unfriend", friendship_path(friendship), method: :delete %>
  <%# end %>
</ul>

<h4>Friends requests - received friendships</h4>
<ul>
    <% current_user.received_friendships.each do |request| %>
    <%unless request.accepted == true%>
    <li>
      <%= request.user.username%>
      <%= link_to "Accept",  friendship_path(id: request.id), method: "put" %>
      <%= link_to "Decline", friendship_path(id: request.id), method: :delete %>
    </li>
    <% end %>
  <% end %>
</ul>

<h4>Requests sent - pending friends</h4>
<ul>
  <% current_user.pending_friends.each do |friendship| %>
    <li>
      <%= friendship.username%>
    </li>
    <% end %>
</ul>





<div id="bg-landing" style='background-image: url("<%= image_path 'bg-landing2.jpg' %>"), linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 30%);'>

  <div class="container">
      <div class="row">
        <div class="col-xs-12 text-center">
          <%= image_tag 'mustachio-logo.png', class: 'main-logo' %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 text-center">
          <% if user_signed_in? %>
            <div><%=link_to "welcome", collections_path, class: 'btn btn-signin'%></div>
            <div id='sign-out'>
              <%= link_to 'sign out', destroy_user_session_path, method: :delete%>
            </div>
          <%else%>
            <%=link_to "sign in", new_user_session_path, class: 'btn btn-signin'%>
            <div id='sign-up'>
              <%= link_to "Not on Mustachio?", new_user_registration_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

</div>



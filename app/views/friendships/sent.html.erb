

<%= render 'friendships/menus'%>
<div class="col-xs-12 col-sm-6 col-sm-offset-3 center">
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'View', friendships_path%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'Add', users_path%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'Pending', pending_path%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'Sent', sent_path%>
      </div>
    </div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3  ">
      <%number = 0 %>
      <% current_user.pending_friends.each do |request| %>
      <% number +=1 %>
      <% end %>
      <% if number == 0 %>
      <h4>You don't have any pending requests...</h4>
      <% else %>
      <h4>Requests sent</h4>
      <% current_user.pending_friends.each do |friendship| %>
      <ul class ="friend-profiles-list-minimal">
        <li>
          <div class="friend-avatar">
            <% avatar_url = friendship.facebook_picture_url || friendship.photo %>
          <%= image_tag avatar_url , class: "avatar-large"%>
          </div>
          <p class="friend-name">
           <%= friendship.username%>
          <span>
            <%=pluralize(friendship.collections.size, 'Movie')%>
            <%=pluralize(friendship.tags.size, 'Tag')%>
          </span>
          </p>
        </li>
        <%end%>
        <%end%>
      </ul>
    </div>
  </div>
</div>




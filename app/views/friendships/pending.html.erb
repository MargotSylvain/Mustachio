
<%number = 0 %>
<% current_user.received_friendships.each do |request| %>
  <%unless request.accepted == true%>
      <% number +=1 %>
  <% end %>
<% end %>
<% if number == 0 %>
<% else %>
<h4>Friend requests</h4>
<div id="users">
  <% current_user.received_friendships.each do |request| %>
    <%unless request.accepted == true%>
      <div class="user">
        <ul class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-2 col-lg-6 col-lg-offset-2 user-profiles-list-minimal">
        <li>
          <div class="user-avatar">
            <% avatar_url = request.user.facebook_picture_url || request.user.photo %>
            <%= image_tag avatar_url , class: "avatar"%>
          </div>
          <p class="user-name">
            <%=request.user.username %>
            <span>
              <%=pluralize(request.user.collections.size, 'Movie')%>
              <%=pluralize(request.user.tags.size, 'Tag')%>
            </span>
            <span>
              <%= link_to "yes",  friendship_path(id: request.id), method: "put" %>
              <%= link_to "no", friendship_path(id: request.id), method: :delete %>
            </span>
          </p>
        </li>
        </ul>
      </div>
    <%end%>
  <% end %>
</div>

<% end %>


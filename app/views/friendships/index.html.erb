<%= render 'friendships/menus'%>
<div class="row">
  <div class="container">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3  ">
      <h4>My friends</h4>
      <% current_user.friends.each do |friend|%>
      <ul class ="friend-profiles-list-minimal">
        <li>
          <div class="friend-avatar">
            <% avatar_url = friend.facebook_picture_url || friend.photo %>
            <%= image_tag avatar_url , class: "avatar-large"%>
          </div>
          <p class="friend-name">
            <% name = friend.username%>
            <%= link_to name, friendship_path(friend) %>
            <span>
              <%=pluralize(friend.collections.size, 'Movie')%>
              <%=pluralize(friend.tags.size, 'Tag')%>
            </span>
          </p>
        </li>
        <%end%>
      </ul>
    </div>
  </div>
</div>



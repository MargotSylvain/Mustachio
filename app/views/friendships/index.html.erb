<% render 'friendships/menus'%>
<div class="container" style='padding-top:80px;'>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3  ">
      <h4 class="text-center">My friends</h4>
      <% current_user.friends.each do |friend|%>

        <%= link_to friendship_path(friend), class: "friend-card" do %>
          <% avatar_url = friend.facebook_picture_url || friend.photo %>
          <%= image_tag avatar_url , class: "avatar-large"%>
          <h3><%= friend.username%></h3>
          <span>
            <span style="padding-right: 5px;"><%=pluralize(friend.collections.size, 'Movie')%></span>
            <span><%=pluralize(friend.tags.size, 'Tag')%></span>
          </span>
        <% end %>
        <%end%>
    </div>
  </div>
</div>


  <%= link_to 'View', friendships_path%></br>
  <%= link_to 'Add', users_path%></br>
  <%= link_to 'Pending', pending_path%></br>
  <%= link_to 'Sent', sent_path%></br></div>

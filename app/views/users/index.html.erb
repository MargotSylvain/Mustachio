
<div class="container" style='padding-top:80px;'>
  <div class="row">

    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'View', friendships_path%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'Add', users_path%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'Pending', pending_path%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= link_to 'Sent', sent_path%>
      </div>
    </div>
<hr>
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 ">
     <div class="text-center">
       <%= form_tag(users_path, :method => "get", id: "search-form") do %>
       <%= text_field_tag :search, params[:search], placeholder: "Find friends", class: 'tag-input' %>

       <%= image_submit_tag("logo-white.png", class: 'image-responsive search-logo') %>
       <% end %>

        <% if @users.present? %>
          <%= render 'users' %>
        <% else %>
          <p>There are no user matching: <%= params[:search] %>.</p>
       <% end %>
     </div>

   </div>
 </div>
</div>






